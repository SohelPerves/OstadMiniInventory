@model OstadMiniInventory.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<dl class="row mt-4">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@Model.Category</dd>

    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">$@Model.Price</dd>

    <dt class="col-sm-3">Quantity</dt>
    <dd class="col-sm-9">@Model.Quantity</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">
        <span class="badge bg-@(Model.Status == "In Stock" ? "success" : Model.Status == "Low Stock" ? "warning" : "danger")">
            @Model.Status
        </span>
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
